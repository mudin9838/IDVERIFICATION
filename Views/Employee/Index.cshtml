@model IEnumerable<IDVERIFICATION.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<h2>Employees</h2>
<a href="@Url.Action("Create")">Add New Employee</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Tax Center</th>
            <th>QR Code</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Position</td>
                <td>@employee.TaxCenter</td>
                <td>
                    <img src="@employee.QRCodeUrl" alt="QR Code" width="100" />
                </td>
            </tr>
        }
    </tbody>
</table>
